---
/* 
  This layout is used in pages that render markdoc content
  - pages/blog/[slug].astro
*/

// Import the global.css file here so that it is included on
import "../styles/global.css";

import GoogleFont from "./GoogleFont.astro";
import FontAwesome from "./FontAwesome.astro";
import ThemeScript from "./ThemeScript.astro";
import Favicon from "./Favicon.astro";
import slugify from "slugify";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TagList from "../components/TagList.astro";
import TableOfContentsSidebar from "../components/TableOfContentsSidebar.astro";
import { SITE_URL } from "../config";
import type { Content } from "astro-markdoc-renderer";

export interface Props {
  title: string;
  date: Date;
  tags?: string[];
  readingTime?: number;
  wordCount?: number;
  slug?: string;
  content?: Content;
  showToc?: boolean;
}

const { title, date, tags, readingTime, wordCount, slug, content, showToc } =
  Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-us", {
  year: "numeric",
  month: "short",
  day: "numeric",
});

const titleId = slugify(title.toLowerCase());
const pageUrl = slug ? `${SITE_URL}/blog/${slug}` : "";
const encodedUrl = encodeURIComponent(pageUrl);
const encodedTitle = encodeURIComponent(title);

const socialPlatforms = [
  {
    name: "X",
    icon: "fa-brands fa-x-twitter",
    url: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
    title: "Share on X (Twitter)",
  },
  {
    name: "Bluesky",
    icon: "fa-brands fa-bluesky",
    url: `https://bsky.app/intent/compose?text=${encodedTitle}%20${encodedUrl}`,
    title: "Share on Bluesky",
  },
  {
    name: "LinkedIn",
    icon: "fa-brands fa-linkedin",
    url: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
    title: "Share on LinkedIn",
  },
  {
    name: "Facebook",
    icon: "fa-brands fa-facebook",
    url: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
    title: "Share on Facebook",
  },
  {
    name: "Mastodon",
    icon: "fa-brands fa-mastodon",
    url: `https://mastodonshare.com/?url=${encodedUrl}&text=${encodedTitle}`,
    title: "Share on Mastodon",
  },
  {
    name: "Reddit",
    icon: "fa-brands fa-reddit-alien",
    url: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
    title: "Share on Reddit",
  },
  {
    name: "Hacker News",
    icon: "fa-brands fa-hacker-news",
    url: `https://news.ycombinator.com/submitlink?u=${encodedUrl}&t=${encodedTitle}`,
    title: "Share on Hacker News",
  },
];
---

<!doctype html>
<html class="theme-sleek" lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta
      name="theme-color"
      content="#f8fafc"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#020617"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content="Blogster" />
    <link rel="sitemap" href="/sitemap-0.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed"
      href="/rss.xml"
    />
    <Favicon />
    <slot name="meta" />
    <GoogleFont />
    <ThemeScript />
    <FontAwesome />
  </head>

  <body class="min-h-screen">
    <Header />
    <main id="main" class="content-with-sidebar mx-auto px-6 sm:px-8 pt-8">
      <div class="content-wrapper">
        <section class="blog-post prose max-w-none prose-sleek">
          <h1
            id={titleId}
            class="m-0 mb-[0.25em] pt-8 pb-4 border-b-4 border-primary-main/30 relative"
          >
            <span
              class="absolute left-0 top-2 w-16 h-1 bg-primary-main rounded-full"
            ></span>
            {title}
          </h1>
          <div
            class="flex flex-wrap items-center gap-3 mb-[0.5em] text-text-muted"
          >
            <time>{formattedDate}</time>
            {
              readingTime && (
                <>
                  <span>•</span>
                  <span>{readingTime} min read</span>
                </>
              )
            }
            {
              wordCount && (
                <>
                  <span>•</span>
                  <span>{wordCount.toLocaleString()} words</span>
                </>
              )
            }
            {
              slug && (
                <>
                  <span>•</span>
                  <a
                    href={`https://github.com/fiffeek/filipmikina.com/blob/main/content/blog/${slug}.md`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 text-text-muted hover:text-text-link transition-colors edit-page-link"
                    title="Edit this page on GitHub"
                  >
                    <i class="fa-solid fa-pen-to-square text-xs" />
                    <span>Edit this page</span>
                  </a>
                </>
              )
            }
          </div>
          {tags && tags.length > 0 && <TagList tags={tags} />}
          <slot name="content" />
          {
            slug && (
              <div class="mt-8 pt-6 border-t border-text-muted/20">
                <div class="mb-6">
                  <h3 class="text-sm font-semibold text-text-muted mb-3">
                    Share this article
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {socialPlatforms.map((platform) => (
                      <a
                        href={platform.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center w-10 h-10 text-lg rounded-lg transition-all bg-bg-secondary text-text-bold border border-border-color hover:bg-primary-main hover:border-primary-main hover:scale-110 share-button"
                        aria-label={platform.title}
                        title={platform.title}
                      >
                        <i class={platform.icon} />
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            )
          }
        </section>
      </div>
      {
        showToc && content && (
          <TableOfContentsSidebar content={content} title={title} />
        )
      }
    </main>
    <Footer />
    <style>
      html {
        scroll-padding-top: 6rem;
      }

      body {
        display: grid;
        grid-template-areas:
          "header"
          "main"
          "footer";
        grid-template-rows: 4rem minmax(0, 1fr) 5rem;
        grid-template-columns: minmax(0, 1fr);
      }
      main {
        grid-area: main;
      }

      .content-with-sidebar {
        max-width: 100%;
        display: flex;
        gap: 3rem;
        align-items: flex-start;
      }

      .content-wrapper {
        flex: 1;
        min-width: 0;
        max-width: 48rem;
      }

      @media (max-width: 768px) {
        .content-with-sidebar {
          width: 100%;
        }

        .content-wrapper {
          max-width: 100%;
        }
      }

      @media (max-width: 1023px) {
        .content-with-sidebar {
          max-width: 48rem;
        }

        .content-wrapper {
          max-width: 100%;
        }
      }

      .blog-post.prose {
        line-height: 1.75;
      }

      .blog-post.prose p {
        margin-bottom: 1.5rem;
      }

      .blog-post.prose ul,
      .blog-post.prose ol {
        margin-bottom: 1.5rem;
        margin-top: 1rem;
      }

      .blog-post.prose li {
        margin-bottom: 0.5rem;
      }

      .blog-post.prose pre {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }

      /* Share button styles */
      .share-button:hover {
        color: #ffffff !important;
      }

      .share-button:hover i {
        color: #ffffff !important;
      }

      /* Edit page link - remove underline */
      .edit-page-link,
      .edit-page-link:hover,
      .edit-page-link:active,
      .edit-page-link:focus,
      .edit-page-link:visited {
        text-decoration: none !important;
        border-bottom: none !important;
        box-shadow: none !important;
        background-image: none !important;
        text-decoration-line: none !important;
        text-decoration-color: transparent !important;
      }

      .edit-page-link span,
      .edit-page-link:hover span {
        text-decoration: none !important;
        border-bottom: none !important;
        box-shadow: none !important;
        background-image: none !important;
      }

      .blog-post.prose .edit-page-link {
        text-decoration: none !important;
        border-bottom: none !important;
      }
    </style>
  </body>
</html>
