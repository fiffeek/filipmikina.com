---
/* 
  This layout is used in pages that render markdoc content
  - pages/blog/[slug].astro
*/

// Import the global.css file here so that it is included on
import "../styles/global.css";

import GoogleFont from "./GoogleFont.astro";
import FontAwesome from "./FontAwesome.astro";
import ThemeScript from "./ThemeScript.astro";
import Favicon from "./Favicon.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TagList from "../components/TagList.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { SITE_URL } from "../config";
import type { Content } from "astro-markdoc-renderer";

export interface Props {
  title: string;
  date: Date;
  tags?: string[];
  readingTime?: number;
  wordCount?: number;
  slug?: string;
  content?: Content;
  showToc?: boolean;
}

const { title, date, tags, readingTime, wordCount, slug, content, showToc } =
  Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-us", {
  year: "numeric",
  month: "short",
  day: "numeric",
});

// Social sharing configuration
const pageUrl = slug ? `${SITE_URL}/blog/${slug}` : "";
const encodedUrl = encodeURIComponent(pageUrl);
const encodedTitle = encodeURIComponent(title);

const socialPlatforms = [
  {
    name: "X",
    icon: "fa-brands fa-x-twitter",
    url: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
    color: "bg-black hover:bg-gray-800",
  },
  {
    name: "Bluesky",
    icon: "fa-brands fa-bluesky",
    url: `https://bsky.app/intent/compose?text=${encodedTitle}%20${encodedUrl}`,
    color: "bg-[#0285FF] hover:bg-[#0070e0]",
  },
  {
    name: "LinkedIn",
    icon: "fa-brands fa-linkedin",
    url: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
    color: "bg-[#0A66C2] hover:bg-[#004182]",
  },
  {
    name: "Facebook",
    icon: "fa-brands fa-facebook",
    url: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
    color: "bg-[#1877F2] hover:bg-[#0d5dba]",
  },
  {
    name: "Mastodon",
    icon: "fa-brands fa-mastodon",
    url: `https://mastodonshare.com/?url=${encodedUrl}&text=${encodedTitle}`,
    color: "bg-[#6364FF] hover:bg-[#4d4ed9]",
  },
  {
    name: "Reddit",
    icon: "fa-brands fa-reddit-alien",
    url: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
    color: "bg-[#FF4500] hover:bg-[#cc3700]",
  },
  {
    name: "Hacker News",
    icon: "fa-brands fa-hacker-news",
    url: `https://news.ycombinator.com/submitlink?u=${encodedUrl}&t=${encodedTitle}`,
    color: "bg-[#FF6600] hover:bg-[#e65c00]",
  },
];
---

<!doctype html>
<html class="theme-sleek" lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#1a1a1a"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content="Blogster" />
    <link rel="sitemap" href="/sitemap-0.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed"
      href="/rss.xml"
    />
    <Favicon />
    <slot name="meta" />
    <GoogleFont />
    <ThemeScript />
    <FontAwesome />
  </head>

  <body class="min-h-screen max-w-3xl mx-auto px-6 sm:px-8">
    <Header />
    <main id="main">
      <section class="blog-post prose max-w-none prose-sleek">
        <h1 class="m-0 mb-[0.25em]">{title}</h1>
        <div
          class="flex flex-wrap items-center gap-3 mb-[0.5em] text-text-muted"
        >
          <time>{formattedDate}</time>
          {
            readingTime && (
              <>
                <span>•</span>
                <span>{readingTime} min read</span>
              </>
            )
          }
          {
            wordCount && (
              <>
                <span>•</span>
                <span>{wordCount.toLocaleString()} words</span>
              </>
            )
          }
        </div>
        {tags && tags.length > 0 && <TagList tags={tags} />}
        {showToc && content && <TableOfContents content={content} />}
        <slot name="content" />
        {
          slug && (
            <div class="mt-8 pt-6 border-t border-text-muted/20">
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-text-muted mb-3">
                  Share this article
                </h3>
                <div class="flex flex-wrap gap-3">
                  {socialPlatforms.map((platform) => (
                    <a
                      href={platform.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class={`inline-flex items-center gap-2 px-4 py-2 text-sm text-white rounded-lg transition-colors ${platform.color}`}
                      aria-label={`Share on ${platform.name}`}
                    >
                      <i class={platform.icon} />
                      <span>{platform.name}</span>
                    </a>
                  ))}
                </div>
              </div>
              <div class="text-text-muted">
                <a
                  href={`https://github.com/fiffeek/filipmikina.com/blob/main/content/blog/${slug}.md`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm hover:text-text-link transition-colors"
                >
                  <i class="fa-solid fa-pen-to-square" />
                  <span>Edit this page</span>
                </a>
              </div>
            </div>
          )
        }
      </section>
    </main>
    <Footer />
    <style>
      body {
        display: grid;
        grid-template-areas:
          "header"
          "main"
          "footer";
        grid-template-rows: 5rem minmax(0, 1fr) 5rem;
        grid-template-columns: minmax(0, 1fr);
      }
      main {
        grid-area: main;
      }

      /* Enhanced spacing for blog content */
      .blog-post.prose {
        line-height: 1.75;
      }

      .blog-post.prose p {
        margin-bottom: 1.5rem;
      }

      .blog-post.prose ul,
      .blog-post.prose ol {
        margin-bottom: 1.5rem;
        margin-top: 1rem;
      }

      .blog-post.prose li {
        margin-bottom: 0.5rem;
      }

      .blog-post.prose pre {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }
    </style>
  </body>
</html>
