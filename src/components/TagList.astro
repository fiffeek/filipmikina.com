---
export interface Props {
  tags: { tag: string; count: number }[] | string[];
}

const { tags } = Astro.props;

// Normalize tags to always have the count structure
const normalizedTags = tags.map((item) =>
  typeof item === "string" ? { tag: item, count: undefined } : item,
);
---

{
  normalizedTags && normalizedTags.length > 0 && (
    <div class="tag-list not-prose">
      {normalizedTags.map(({ tag, count }) => (
        <a href={`/blog/tag/${encodeURIComponent(tag)}`} class="badge unset">
          <svg
            class="badge-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M5.5 3A2.5 2.5 0 003 5.5v2.879a2.5 2.5 0 00.732 1.767l6.5 6.5a2.5 2.5 0 003.536 0l2.878-2.878a2.5 2.5 0 000-3.536l-6.5-6.5A2.5 2.5 0 008.38 3H5.5zM6 7a1 1 0 100-2 1 1 0 000 2z"
              clip-rule="evenodd"
            />
          </svg>
          {tag}
          {count !== undefined && <span class="badge-count">{count}</span>}
        </a>
      ))}
    </div>
  )
}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.875rem;
    font-size: 0.8125rem;
    font-weight: 600;
    line-height: 1;
    color: rgb(var(--color-primary-main));
    background-color: rgb(var(--color-primary-main) / 0.1);
    border: 1px solid rgb(var(--color-primary-main) / 0.2);
    border-radius: 9999px;
    transition: all 0.2s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .badge:hover {
    background-color: rgb(var(--color-primary-main) / 0.15);
    border-color: rgb(var(--color-primary-main) / 0.3);
    transform: translateY(-1px);
    text-decoration: none;
  }

  .badge-icon {
    width: 0.875rem;
    height: 0.875rem;
    flex-shrink: 0;
  }

  .badge-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.25rem;
    height: 1.25rem;
    padding: 0 0.375rem;
    margin-left: 0.25rem;
    font-size: 0.75rem;
    font-weight: 700;
    line-height: 1;
    color: #ffffff;
    background-color: rgb(var(--color-primary-main));
    border-radius: 9999px;
  }
</style>
