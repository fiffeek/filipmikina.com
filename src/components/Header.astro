---
import DarkModeToggle from "./DarkModeToggle.astro";
import Navbar from "./Navbar.astro";
import SearchModal from "./SearchModal.astro";
import ReadingProgress from "./ReadingProgress.astro";
import { GITHUB_URL, LINKEDIN_URL, KOFI_URL } from "../config";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
    title="Skip to main content"
  >
    Skip to content
  </a>
  <div class="logo-container flex items-center">
    <img src="/images/logo.svg" alt="Logo" class="logo" />
    <span class="logo-text">Filip Mikina</span>
  </div>
  <Navbar />
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href="/rss.xml"
      title="RSS Feed"
    >
      <i class="fa-solid fa-rss" aria-hidden="true"></i>
      <span class="fa-sr-only">RSS Feed</span>
    </a>
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href={LINKEDIN_URL}
      title="Filip Mikina on LinkedIn"
    >
      <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
      <span class="fa-sr-only">LinkedIn</span>
    </a>
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href={GITHUB_URL}
      title="Filip Mikina on GitHub"
    >
      <i class="fa-brands fa-github" aria-hidden="true"></i>
      <span class="fa-sr-only">Github</span>
    </a>
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href={KOFI_URL}
      target="_blank"
      rel="noopener noreferrer"
      title="Support me on Ko-fi"
    >
      <i class="fa-solid fa-mug-hot" aria-hidden="true"></i>
      <span class="fa-sr-only">Ko-fi</span>
    </a>
  </div>
  <DarkModeToggle />
  <SearchModal />
  <ReadingProgress />
</header>

<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: var(--theme-bg);
    backdrop-filter: blur(20px);
    padding-left: 1rem;
    padding-right: 1rem;
    grid-template-columns:
      minmax(0, max-content) minmax(0, 1fr) minmax(0, max-content)
      minmax(0, max-content) minmax(0, max-content);
  }

  @supports (-webkit-touch-callout: none) {
    header {
      position: -webkit-sticky;
    }
  }

  @media (min-width: 640px) {
    header {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    header {
      padding-left: 2rem;
      padding-right: 2rem;
      grid-template-columns:
        minmax(0, max-content) minmax(0, max-content) minmax(0, 1fr)
        minmax(0, max-content) minmax(0, max-content) minmax(0, max-content);
    }
  }

  .logo-container {
    display: none;
    align-items: center;
    gap: 0.75rem;
    margin-right: 2rem;
  }

  @media (min-width: 1024px) {
    .logo-container {
      display: flex;
    }
  }

  .logo {
    height: 1.25rem;
    width: auto;
    transition: filter 0.2s ease;
  }

  .logo-text {
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-bold);
    white-space: nowrap;
  }

  /* Light theme - keep logo black */
  :global(.theme-sleek:not(.dark)) .logo {
    filter: brightness(0);
  }

  /* Dark theme - invert to white */
  :global(.theme-sleek.dark) .logo {
    filter: brightness(0) invert(1);
  }
</style>
