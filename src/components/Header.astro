---
import DarkModeToggle from "./DarkModeToggle.astro";
import Navbar from "./Navbar.astro";
import SearchModal from "./SearchModal.astro";
import { GITHUB_URL, LINKEDIN_URL } from "../config";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <Navbar />
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href="/rss.xml"
      title="RSS Feed"
    >
      <i class="fa-solid fa-rss" aria-hidden="true"></i>
      <span class="fa-sr-only">RSS Feed</span>
    </a>
    <a
      class="unset text-lg ml-4 hover:text-text-link"
      href={LINKEDIN_URL}
      title="Filip Mikina on LinkedIn"
    >
      <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
      <span class="fa-sr-only">LinkedIn</span>
    </a>
    <a class="unset text-lg ml-4 hover:text-text-link" href={GITHUB_URL}>
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="Filip Mikina on GitHub"></i>
      <span class="fa-sr-only">Github</span>
    </a>
  </div>
  <DarkModeToggle />
  <SearchModal />
</header>

<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    position: relative;
    grid-template-columns:
      minmax(0, max-content) minmax(0, 1fr) minmax(0, max-content)
      minmax(0, max-content) minmax(0, max-content);
  }

  @media (min-width: 768px) {
    header {
      grid-template-columns:
        minmax(0, 1fr) minmax(0, max-content) minmax(0, max-content)
        minmax(0, max-content) minmax(0, max-content);
    }
  }
</style>
