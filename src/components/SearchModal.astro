---
import Search from "./Search.astro";
---

<button
  id="search-button"
  class="search-button hidden md:flex"
  aria-label="Search"
  title="Search (Cmd/Ctrl+K)"
>
  <i class="fa-solid fa-magnifying-glass mr-2"></i>
  <span class="text-sm text-text-muted">CTRL+K</span>
</button>

<div
  id="search-modal"
  class="search-modal"
  role="dialog"
  aria-modal="true"
  aria-labelledby="search-title"
>
  <div class="search-modal-backdrop"></div>
  <div class="search-modal-content">
    <div class="search-modal-header">
      <h2 id="search-title" class="search-modal-title">Search</h2>
      <button
        id="close-search"
        class="search-modal-close"
        aria-label="Close search"
      >
        <i class="fa-solid fa-times"></i>
      </button>
    </div>
    <div class="search-modal-body">
      <Search />
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const searchButton = document.getElementById("search-button");
    const searchModal = document.getElementById("search-modal");
    const closeButton = document.getElementById("close-search");
    const backdrop = searchModal?.querySelector(".search-modal-backdrop");

    function openModal() {
      searchModal?.classList.add("active");
      document.body.style.overflow = "hidden";
      const input = searchModal?.querySelector(
        ".pagefind-ui__search-input",
      ) as HTMLInputElement;
      setTimeout(() => input?.focus(), 100);
    }

    function closeModal() {
      searchModal?.classList.remove("active");
      document.body.style.overflow = "";
    }

    searchButton?.addEventListener("click", openModal);
    closeButton?.addEventListener("click", closeModal);
    backdrop?.addEventListener("click", closeModal);

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && searchModal?.classList.contains("active")) {
        closeModal();
      }
      if ((e.metaKey || e.ctrlKey) && e.key === "k") {
        e.preventDefault();
        openModal();
      }
    });
  });
</script>

<style>
  .search-button {
    background: none;
    border: 1px solid rgb(var(--color-text-muted) / 0.2);
    border-radius: 0.375rem;
    color: rgb(var(--color-text-bold));
    font-size: 1rem;
    cursor: pointer;
    padding: 0.375rem 0.75rem;
    display: none;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
    margin-left: 1rem;
  }

  @media (min-width: 768px) {
    .search-button {
      display: flex;
    }
  }

  .search-button:hover {
    color: rgb(var(--color-primary-main));
    border-color: rgb(var(--color-primary-main) / 0.3);
  }

  .search-button span {
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: none;
  }

  .search-modal.active {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 10vh;
  }

  .search-modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .search-modal-content {
    position: relative;
    width: 90%;
    max-width: 42rem;
    background-color: rgb(var(--color-bg-body));
    border-radius: 0.5rem;
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border: 1px solid rgb(var(--color-text-muted) / 0.2);
    max-height: 80vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  html.dark .search-modal-content {
    border-color: rgb(var(--color-text-muted) / 0.3);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.3),
      0 10px 10px -5px rgba(0, 0, 0, 0.2);
  }

  .search-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgb(var(--color-text-muted) / 0.2);
  }

  .search-modal-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: rgb(var(--color-text-bold));
    margin: 0;
  }

  .search-modal-close {
    background: none;
    border: none;
    color: rgb(var(--color-text-muted));
    cursor: pointer;
    font-size: 1.5rem;
    padding: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .search-modal-close:hover {
    color: rgb(var(--color-text-bold));
    background-color: rgb(var(--color-text-body) / 0.05);
  }

  .search-modal-body {
    padding: 1.5rem;
    overflow-y: auto;
    flex: 1;
  }

  @media (max-width: 640px) {
    .search-modal.active {
      padding-top: 2rem;
    }

    .search-modal-content {
      width: 95%;
      max-height: 90vh;
    }

    .search-modal-header {
      padding: 0.75rem 1rem;
    }

    .search-modal-body {
      padding: 1rem;
    }
  }
</style>
