---
import { MY_NAME, SITE_URL } from "../config";

const currentYear = new Date().getFullYear();
---

<footer
  class="text-sm leading-[1.75] mt-4 text-text-muted border-t-2 border-primary-main/20 pt-6"
>
  <div class="flex flex-col items-center gap-3">
    <div class="flex items-center gap-2">
      <span class="text-primary-main">©</span>
      {currentYear}
      {MY_NAME}
    </div>
    <div class="flex gap-4 items-center">
      <a
        class="unset hover:text-primary-main transition-colors inline-flex items-center gap-1"
        href="/rss.xml"
        title="Subscribe via RSS"
      >
        <i class="fa-solid fa-rss text-xs"></i>
        RSS
      </a>
      <span class="text-primary-main/40">•</span>
      <a
        class="unset hover:text-primary-main transition-colors inline-flex items-center gap-1"
        href="https://github.com/fiffeek/filipmikina.com"
        target="_blank"
        rel="noopener noreferrer"
        title="View source code on GitHub"
      >
        <i class="fa-brands fa-github text-xs"></i>
        Source
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    grid-area: footer;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
