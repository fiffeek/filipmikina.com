---
import { MY_NAME, SITE_URL } from "../config";

const currentYear = new Date().getFullYear();
---

<footer class="text-sm leading-[1.75] mt-4 text-text-muted">
  <div class="flex flex-col items-center gap-2">
    <div>
      © {currentYear}
      {MY_NAME}
    </div>
    <div class="flex gap-4">
      <a
        class="unset hover:text-text-link"
        href="/rss.xml"
        title="Subscribe via RSS"
      >
        RSS
      </a>
      <span>•</span>
      <a
        class="unset hover:text-text-link"
        href="https://github.com/fiffeek/filipmikina.com"
        target="_blank"
        rel="noopener noreferrer"
        title="View source code on GitHub"
      >
        Source
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    grid-area: footer;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
